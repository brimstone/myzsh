# don't save history to a file
unset HISTFILE
# save a lot in our terminal
export HISTSIZE=1000

setopt AUTO_CD
setopt NO_BEEP
setopt CORRECT # srsly, you want this spell correction
setopt BRACE_CCL

setopt extended_glob

alias grep='grep --color=auto'
alias ssh="TERM=screen ssh"
alias vi="exit; echo "


SSH_PAYLOAD="$(dirname "$0")/ssh_payload"
function ssh(){
	if [ "$#" != 1 ]; then
		command ssh "$@"
	else
		command ssh -t "$1" "$(< $SSH_PAYLOAD)
		exec \$SHELL"
	fi
}
